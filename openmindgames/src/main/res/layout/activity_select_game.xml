<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context="org.roadbug.openmind.SelectGameActivity">

    <ImageView
        android:id="@+id/game_abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:src="@drawable/game_abc"
        android:tooltipText="Build and read words"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/game_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:padding="25dp"
        android:src="@drawable/game_ride"
        android:tooltipText="Game controled by your voice"
        app:layout_constraintStart_toEndOf="@+id/game_abc"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
